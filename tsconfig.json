{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": false,
    "target": "es5",
    "module": "esnext",
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2015"
    ],
    "paths": {
      "@insta-ui/*": ["packages/*"]
    }
  },
  "include": ["./packages/**/*", "./types"],
  "exclude": ["node_modules"]
}
