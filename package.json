{
  "name": "@im-ui/im-components",
  "version": "1.0.0",
  "description": "The components library for the instamotion website",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest --config=jest.config.js",
    "test:watch": "NODE_ENV=test jest --watch --config=jest.config.js",
    "generate:component": "hygen component new",
    "clean": "rm -r storybook-dist && bolt ws exec -- rm -r dist && bolt ws exec -- rm -r node_modules",
    "prettier:base": "prettier --parser typescript",
    "prettier:check": "npm run prettier:base -- --list-different \"packages/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"packages/**/*.{ts,tsx}\"",
    "build:storybook": "build-storybook -c .storybook -o ./storybook-dist",
    "build:components": "bolt workspaces run build",
    "build": "bolt build:components && bolt build:storybook",
    "start": "start-storybook -p 6006",
    "version:bump": "node ./lib/bumpVersion.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Instamotion/im-components.git"
  },
  "keywords": [],
  "author": "InstaMotion Retail GmbH",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Instamotion/im-components/issues"
  },
  "homepage": "https://github.com/Instamotion/im-components#readme",
  "dependencies": {
    "react": "^16.11.0",
    "react-alice-carousel": "^1.15.3",
    "react-gtm-module": "^2.0.8",
    "react-swipeable": "^5.4.0",
    "styled-components": "^4.4.1",
    "semver": "^6.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@storybook/addon-a11y": "^5.2.5",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-knobs": "^5.2.5",
    "@storybook/addon-storysource": "^5.2.5",
    "@storybook/addons": "^5.2.5",
    "@storybook/react": "^5.2.5",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-to-json": "^1.5.3",
    "@types/faker": "^4.1.7",
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.5",
    "@types/react": "^16.9.11",
    "@types/react-gtm-module": "^2.0.0",
    "@types/react-intl": "^3.0.0",
    "@types/storybook__react": "^4.0.2",
    "@types/styled-components": "^4.1.20",
    "@types/webpack": "^4.39.8",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "bolt": "^0.24.3",
    "bolt-query": "^1.1.4",
    "enhanced-resolve": "^4.1.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.3",
    "faker": "^4.1.0",
    "husky": "^3.0.9",
    "hygen": "^5.0.1",
    "inquirer": "^7.0.0",
    "jest": "^24.9.0",
    "jest-junit": "^9.0.0",
    "jest-styled-components": "^6.3.3",
    "jest-svg-transformer": "^1.0.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "prop-types": "^15.7.2",
    "react-dom": "^16.11.0",
    "react-intl": "^3.4.0",
    "react-svg-loader": "^3.0.3",
    "resolve-from": "^5.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.tsx": [
      "npm run prettier:write",
      "git add"
    ]
  },
  "bolt": {
    "workspaces": [
      "packages/*"
    ]
  },
  "peerDependencies": {}
}
