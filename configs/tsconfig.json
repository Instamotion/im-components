{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "target": "es5",
    "module": "esnext",
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "..",
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": ["../packages/**/*", "../types"],
  "exclude": ["../node_modules", "../dist", "../build", "../scripts"]
}
